		{
			"type": "cppbuild",
			"label": "Compile C++14",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++14",
				"-LOCAL_DEFINE",
				"-Wall",
				"-Wextra",
				"-Wshadow",
				"-O2",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
