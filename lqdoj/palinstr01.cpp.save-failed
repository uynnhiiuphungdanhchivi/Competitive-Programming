#include<bits/stdc++.h>

using namespace std;

int main() {
    string s;
    int a = s.size(),cnt=0;
    vector<string> vec;
    while(getline(cin, s)) {
        if(s=="") break;
        for(int i=a/2-1;i>=0;--i) {
            if(s[i] != s[a-i-1]) cnt +=1;
            if(cnt>2) {
                vec.push_back("NO");
                break;
            }
            if(i==0) vec.push_back("YES");
        }
    }
    for(auto x : vec) cout << x << '\n';
}
